{
  "name": "kirby-markdown-field",
  "version": "2.0.0-alpha",
  "description": "Enhanced markdown editor for Kirby 3",
  "main": "index.js",
  "author": "Kirby Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:sylvainjule/kirby-markdown-field.git"
  },
  "scripts": {
    "dev": "parcel watch src/index.js --no-source-maps -d ./",
    "build": "parcel build src/index.js --no-source-maps --experimental-scope-hoisting -d ./"
  },
  "devDependencies": {
    "@vue/component-compiler-utils": "^3.2.0",
    "autoprefixer": "^9.8.6",
    "cssnano": "^4.1.10",
    "postcss": "^7.0.14",
    "sass": "^1.30.0",
    "vue-template-compiler": "^2.6.12"
  },
  "dependencies": {
    "@codemirror/commands": "^0.18.0",
    "@codemirror/comment": "^0.18.0",
    "@codemirror/highlight": "^0.18.0",
    "@codemirror/history": "^0.18.0",
    "@codemirror/lang-markdown": "^0.18.0",
    "@codemirror/matchbrackets": "^0.18.0",
    "@codemirror/rangeset": "^0.18.0",
    "@codemirror/search": "^0.18.0",
    "@codemirror/state": "^0.18.0",
    "@codemirror/stream-parser": "^0.18.0",
    "@codemirror/view": "^0.18.0",
    "vue": "^2.6.12",
    "vue-hot-reload-api": "^2.3.4"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "posthtml": {
    "recognizeSelfClosing": true
  }
}
